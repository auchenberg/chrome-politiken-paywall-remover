{
  "name": "Politiken.dk paywall remover",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension removes the paywall on politiken.dk",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contentSettings",
    "http://politiken.dk/*",
    "https://politiken.dk/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://politiken.dk/*",
        "https://politiken.dk/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}